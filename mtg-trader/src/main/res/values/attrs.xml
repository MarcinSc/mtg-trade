<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <declare-styleable name="SplitLayout">
        <attr name="splitHeight" format="integer"/>
    </declare-styleable>
    <declare-styleable name="TitleLayout">
        <attr name="titleHeight" format="integer"/>
    </declare-styleable>

    <declare-styleable name="HorizontalPicker">
        <attr name="displayWidth" format="dimension"/>
        <attr name="pickerStyle" format="string"/>
        <attr name="internalLayout" format="string"/>
    </declare-styleable>

    <declare-styleable name="HorizontalScroller">
        <attr name="displayWidth"/>
        <attr name="scrollerStyle" format="string"/>
        <attr name="textFont" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>
</resources>
